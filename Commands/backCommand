package me.ModMakerGroup.SM.Commands;

import java.io.File;

import me.ModMakerGroup.SM.ServerManager;

import org.bukkit.ChatColor;
import org.bukkit.Location;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.configuration.file.FileConfiguration;
import org.bukkit.configuration.file.YamlConfiguration;
import org.bukkit.entity.Player;

public class backCommand implements CommandExecutor {
	
	ServerManager main;
	public backCommand(ServerManager sm) {
		this.main = sm;
	}
	
	@Override
	public boolean onCommand(CommandSender cs, Command cmd, String label, String[] args) {
	    if (cmd.getName().equalsIgnoreCase("back")) {
	        Player p = (Player)cs;
			File file = null;
	    	if (main.getConfig().getString("General.Language").equals("en_EN")) {
	    		file = new File("plugins/ServerManager/Languages", "en_EN.yml");
	    	} else if (main.getConfig().getString("General.Language").equals("de_DE")) {
	    		file = new File("plugins/ServerManager/Languages", "de_DE.yml");
	    	} else if (main.getConfig().getString("General.Language").equals("es_ES")) {
	    		file = new File("plugins/ServerManager/Languages", "es_ES.yml");
	    	}
	    	FileConfiguration cfgm = YamlConfiguration.loadConfiguration(file);
	        if (p.hasPermission("sm.back")) {
	        	if (args.length == 0) {
	        		if (ServerManager.backdb.containsKey(p.getName())) {
		        		Location loc = (Location)ServerManager.backdb.get(p.getName());
		        		p.teleport(loc);
		        		String telBack = cfgm.getString("Teleport.Back");
		        		telBack = ChatColor.translateAlternateColorCodes('&', telBack);
		        		p.sendMessage("§4[§1SM§4]: " + telBack);
		        	}
	        	} else {
	        		p.sendMessage(ServerManager.prefix + ServerManager.toomuchArgs);
	        		return true;
	        	}
	        } else {
	        	p.sendMessage(ServerManager.prefixb + ServerManager.KeineRechte);
	        	return true;
	        }	
	      }
		return true;
	}

}
