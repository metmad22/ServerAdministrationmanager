package me.ModMakerGroup.SM.Commands;

import me.ModMakerGroup.SM.ServerManager;

import org.bukkit.Bukkit;
import org.bukkit.Location;
import org.bukkit.TreeType;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

public class bigtreeCommand implements CommandExecutor{

	ServerManager main;
	
	public bigtreeCommand(ServerManager sm) {
		this.main = sm;
	}
	
	@Override
	public boolean onCommand(CommandSender cs, Command cmd, String label, String[] args) {
		if (cmd.getName().equalsIgnoreCase("bigtree")) {
			TreeType tree;
			Player p = (Player)cs;
			if (p == null) {
				return true;
			}
			if (!p.hasPermission("sm.bigtree")) {
				p.sendMessage(ServerManager.prefix + ServerManager.KeineRechte);
			}else{
				if (args.length == 0) {
					p.sendMessage("ยง6Usage: /bigtree [redwood|tree|jungle]");
					return true;
				}
			if ((args.length > 0) && (args[0].equalsIgnoreCase("redwood"))) {
				tree = TreeType.TALL_REDWOOD;
				
				int xd = p.getLocation().getBlockX();
				int y = p.getLocation().getBlockY();
				int zd = p.getLocation().getBlockZ();
				int x = xd + 1;
				int z = zd + 1;
				String w = p.getWorld().getName();
				
				Location loc = new Location(Bukkit.getWorld(w), x, y, z);
				p.getWorld().generateTree(loc, tree);
			}else if ((args.length > 0) && (args[0].equalsIgnoreCase("tree"))) {
				tree = TreeType.BIG_TREE;
				
				int xd = p.getLocation().getBlockX();
				int y = p.getLocation().getBlockY();
				int zd = p.getLocation().getBlockZ();
				int x = xd + 1;
				int z = zd + 1;
				String w = p.getWorld().getName();
				
				Location loc = new Location(Bukkit.getWorld(w), x, y, z);
				p.getWorld().generateTree(loc, tree);
			}else if ((args.length > 0) && (args[0].equalsIgnoreCase("jungle"))) {
				tree = TreeType.JUNGLE;
				
				int xd = p.getLocation().getBlockX();
				int y = p.getLocation().getBlockY();
				int zd = p.getLocation().getBlockZ();
				int x = xd + 1;
				int z = zd + 1;
				String w = p.getWorld().getName();
				
				Location loc = new Location(Bukkit.getWorld(w), x, y, z);
				p.getWorld().generateTree(loc, tree);
			}
			
			}
			
		}
		return true;
	}

}
