package me.ModMakerGroup.SM.Commands;

import java.io.File;

import me.ModMakerGroup.SM.ServerManager;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.configuration.file.FileConfiguration;
import org.bukkit.configuration.file.YamlConfiguration;
import org.bukkit.entity.Player;

public class clearinvCommand implements CommandExecutor {
	
	private String pnichtonline;
	ServerManager main;
	public clearinvCommand(ServerManager sm) {
		this.main = sm;
	}
	
	@SuppressWarnings("deprecation")
	@Override
	public boolean onCommand(CommandSender cs, Command cmd, String label, String[] args) {
		if (cmd.getName().equalsIgnoreCase("clearinv")) {
			Player p = (Player)cs;
			File filem = null;
	    	if (main.getConfig().getString("General.Language").equals("en_EN")) {
	    		filem = new File("plugins/ServerManager/Languages", "en_EN.yml");
	    	} else if (main.getConfig().getString("General.Language").equals("de_DE")) {
	    		filem = new File("plugins/ServerManager/Languages", "de_DE.yml");
	    	} else if (main.getConfig().getString("General.Language").equals("es_ES")) {
	    		filem = new File("plugins/ServerManager/Languages", "es_ES.yml");
	    	}
	    	FileConfiguration cfgm = YamlConfiguration.loadConfiguration(filem);
	    		if (p.hasPermission("sm.clearInv")) {
		    		if (args.length == 0) {
			    		String Invgeleert = cfgm.getString("Inventory.Inventory cleared");
			    		Invgeleert = ChatColor.translateAlternateColorCodes('&', Invgeleert);
		    			p.sendMessage("§4[§1SM§4]: " + Invgeleert);
		    			p.getInventory().clear();
		    		}
	    			if (args.length == 1) {
		    			if (Bukkit.getPlayer(args[0]) != null) {
		    		          Player target = Bukkit.getPlayer(args[0]);
		    		          if (target.isOnline()) {
		    		        	String Invgeleert = cfgm.getString("Inventory.Inventory cleared");
		    			    	Invgeleert = ChatColor.translateAlternateColorCodes('&', Invgeleert);
		    		        	target.sendMessage(ServerManager.prefixb + Invgeleert);
		    		            target.getInventory().clear();
		    		          } else {
		    		            p.sendMessage("§4[§1SM§4]: " + pnichtonline);
		    		          }
		    			}
		    		}
	    		}else{
    			p.sendMessage("§4[§1SM§4]: " + ServerManager.KeineRechte);
    		}

	    		
	    		pnichtonline = cfgm.getString("messages.Inventory.Player not online");
	    		pnichtonline = ChatColor.translateAlternateColorCodes('&', cfgm.getString("Inventory.Player not online"));
    	}
		return true;
		
	}

}
